Funcion cantidad <- impares ( num )
	Definir cantidad , d, impar Como Entero
	
	Si num%2 = 0 Entonces
		Escribir "el numero no tiene todos los digitos impares"
	FinSi
	
	mientras num > 0 y num mod 2 <> 0 Hacer
		
		D = num mod 10//8//4
		impar = D//8/12
		si D mod 2 <> 0 Entonces
			num = trunc(num/10)
			
			si num mod 2 <> 0 Entonces
				num = trunc(num/10)
				
			FinSi
			escribir "Es un numero con todos sus digitos impares!!!"
			
			
		FinSi
		num = trunc(num/10)
		
		
		
		
	FinMientras
	
	
Fin Funcion

